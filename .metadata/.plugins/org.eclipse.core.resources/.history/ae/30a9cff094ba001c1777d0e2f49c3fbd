package com.perscholas.java_basics;
java.text.DecimalFormat;
public class JavaBasicsClass {

	public JavaBasicsClass() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		//one
		int  a = 1;
		int b = 2;
		int sum = a + b ;
		System.out.println(sum);
		//two
		double  c = 123412.4;
		double d = 254855.5;
		double sum_double = c + d ;
		System.out.println(sum_double);
		//third
		int  e = 1234;
		double f = 254855.5;
		double sum_int_double = e + f ; // sum should be double
		System.out.println(sum_int_double);
		
		//four 
		int  small = 1;
		int large = 2;
		int divid_by_small =  large/small ;
		System.out.println(divid_by_small);
		float divid_by_small_float =  (float) b / a ; // we needed to change the datatype of the result to float
		System.out.println(divid_by_small_float);
		
		//fifth
		double  g = 123412.4;
		double h = 254855.5;
		double division_double = h / g ;
		System.out.println(division_double);
		double division_double_int = (int) (h / g) ;
		System.out.println(division_double_int);
		
		//sixth
		int x  = 5;
		int y = 6;
		double q = y/x;
		System.out.println(q);
		q = (double)(y)/x;
		System.out.println(q);
		
		//seventh
		final int iAmConstant = 2;
		double sum_with_constant = q + iAmConstant;
		System.out.println(sum_with_constant);
		
		// Eighth Products coffee, cappuccino, espresso, green tea..etc
		double coffee = 2.5;
		double espresso = 2;
		double greenTea = 3.5;
		double subTotal;
		double Total;
		subTotal = 2.5*3 + 2*4 + 3.5*2;
		final double SALES_TAX = 6.25/100;
		Total = (1+SALES_TAX)*subTotal;
	    DecimalFormat f = new DecimalFormat("##.00");
	}

}
